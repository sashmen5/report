{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@sashmen5/components": ["./shared/components"],
      "@sashmen5/widgets": ["./shared/widgets"],
      "@sashmen5/hooks": ["./shared/hooks"],
    }
  }
}